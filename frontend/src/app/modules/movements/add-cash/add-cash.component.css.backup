.full-width {
    width: 100%;
    margin-bottom: 1rem;
  }
  ::ng-deep .mat-mdc-dialog-surface {
    background-color: var(--clr-surface-a10) !important;
  }
  ::ng-deep .mat-mdc-form-field {
    --mdc-outlined-text-field-outline-color: var(--color-primary-dark);
    --mdc-outlined-text-field-hover-outline-color: var(--color-primary);
    --mdc-outlined-text-field-focus-outline-color: var(--color-primary-darker);
    --mdc-theme-primary: var(--color-primary-darker);
  }
  ::ng-deep .mat-mdc-dialog-container .mat-mdc-dialog-title {
    color: var(--color-text) !important;
    font-family: var(--font-family-bold);
    padding: 10px;
  }
  ::ng-deep .mat-mdc-floating-label {
    color: var(--color-text) !important;
    font-family: var(--font-family-normal);
  }
  
  ::ng-deep .mat-mdc-input-element {
    color: var(--color-text) !important;
    font-family: var(--font-family-normal);
  }
  
  ::ng-deep .mat-mdc-raised-button {
    background-color: var(--color-primary-darkest) !important;
    color: var(--color-text-inverse) !important;
  }
  
  ::ng-deep .mat-mdc-button {
    color: var(--color-primary) !important;
  }
  .mat-mdc-dialog-container .mat-mdc-dialog-title .mat-mdc-dialog-content {
    padding: 10px;
    }

  .file-upload-container {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin: 16px 0;
  }

  .file-upload-container button {
    width: fit-content;
  }

  .file-upload-container button mat-icon {
    margin-right: 8px;
  }

  .file-name {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9em;
    color: var(--color-text);
  }

  .error-message {
    color: var(--color-error);
    font-size: 12px;
    margin-top: 8px;
    padding: 8px;
    background-color: var(--clr-error-a10);
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .error-message mat-icon {
    font-size: 16px;
    height: 16px;
    width: 16px;
  }

  mat-dialog-actions {
    padding: 16px 0 0;
    margin-bottom: 0;
    justify-content: flex-end;
    gap: 8px;
  }

  mat-spinner {
    display: inline-block;
    margin-right: 8px;
  }

  :host ::ng-deep .mat-tab-body-content {
    padding: 16px;
  }
  :host ::ng-deep .mat-mdc-dialog-container {
    max-width: 90vw !important;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  :host ::ng-deep .mat-mdc-dialog-surface {
    width: 100%;
    max-width: 420px;
    max-height: 85vh;
    overflow-y: auto;
    padding: 24px !important;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  /* Estilos para información de límites */
  .limits-info {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 12px;
    margin: 16px 0;
  }

  .limit-item {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
    font-size: 14px;
    color: var(--color-text);
  }

  .limit-item:last-child {
    margin-bottom: 0;
  }

  .limit-item mat-icon {
    color: var(--color-primary);
    font-size: 18px;
    width: 18px;
    height: 18px;
  }

  .limit-item span {
    flex: 1;
    font-weight: 500;
  }

  .limit-bar {
    width: 60px;
    height: 6px;
    background: rgba(0, 0, 0, 0.1);
    border-radius: 3px;
    overflow: hidden;
  }

  .limit-progress {
    height: 100%;
    background: var(--color-primary);
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .limit-notification {
    margin: 16px 0;
  }